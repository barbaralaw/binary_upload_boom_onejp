<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-sm-6">
      <h2><%= post.post %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        
        <form
          action="/postPage/likePost/<%= post.id %>?_method=PUT"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fas fa-thumbs-up" type="submit"></button>
        </form>
        <h3 class="col-3"><%= post.likes %></h3>
        
        <form
          action="/postPage/dislikePost/<%= post.id %>?_method=PUT"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fas fa-thumbs-down" type="submit"></button>
        </form>
        <h3 class="col-3"><%= post.dislikes %></h3>
        <%if(post.userId == user.id){ %>
        <form
          action="/post/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-sm-3 mt-5">
      <p><%= post.postBody %></p>
    </div>
    <div class="col-sm-6 mt-5">
      <a class="btn btn-primary" href="/post">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>