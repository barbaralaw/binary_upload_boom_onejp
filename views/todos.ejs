    <%- include('partials/header') -%>
    <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </div>

    <h1>Posts</h1>
    <ul>
    <% todos.forEach( el => { %>
            <li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                <p><%= el.postBody %></p>
                <span class='del'> Delete </span>
                <img src="<%= el.image %>" alt="">
            </li>
    <% }) %>    
    </ul>

    <h2><%= user.userName %> has <%= left %> things left to do.</h2>

    <form action="/todos/createTodo" enctype="multipart/form-data" method='POST'>
        <input type="text" placeholder="Enter Todo Item" name='todoItem'>
        <input type="text" placeholder="Body of Post" name='postBody'>
        <input type="submit">
        <input type="file" class="form-control" id="imageUpload" name="file">
    </form>

    <div class="row justify-content-center mt-5">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div> 
    <script src="js/main.js"></script>
