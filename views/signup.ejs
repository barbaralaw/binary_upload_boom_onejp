<%- include('partials/header') -%>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <div class="container card text-center shadow " style="margin: 7rem auto; min-width: 300px; max-width: 450px; height: auto">
    <form action="/signup" method="POST" class="btn-group flex-column">
        <input type="text" name="userName" placeholder="User Name" class="form-control btn-lg my-2">
        <input type="email" name="email" placeholder="Email" class="form-control btn-lg my-2">
        <input type="password" name="password" placeholder="Password" class="form-control btn-lg my-2">
        <input type="password" name="confirmPassword" placeholder="Confirm Password" class="form-control btn-lg my-2">
        <input type="submit" class="btn btn-outline-primary btn-lg col">
        <p class="my-0">Already have an account? <a href="/login">LOG IN</a></p>
    </form>
    </div>
