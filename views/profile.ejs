    <%- include('partials/header') -%>
    <%- include('partials/nav') -%>
    <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </div>

    <form id="post" action="/post/createPost" enctype="multipart/form-data" method='POST'>
      <img id="uploadPreview"/>
      <div class='file file--upload'>
        <label for='imageUpload' class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
            <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
          </svg>
          Select an Image
        </label>
        <input type="file" class="form-control" id="imageUpload" name="file" accept="image/*" onchange="loadFile(event)" />
      </div>
      <input type="text" placeholder="Enter Post Title" name='post'>
      <input type="text" placeholder="Body of Post" name='postBody'>
      <input type="submit" class="btn btn-primary" value="Add Post">
    </form>

    <div class="container-fluid">
      <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
      <% } %>
      <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
      <% } %>
    </div>

    <h1>Posts</h1>
    <ul class="pcontainer">
    <% post.reverse().forEach( el => { %>
      <li class="card col-md-4">
        <div class='todoItem' data-id='<%=el._id%>'>
            <span><%= el.post %></span>
            <p><%= el.postBody %></p>
            <form
            action="/post/<%= el._id %>?_method=DELETE"
            method="POST"
            class="col-3"
            >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <img src="<%= el.image %>" class="img-fluid" alt="<%= el.post %>">
          </li>
      </div>

    <% }) %>
    </ul>

    <div class="row ret justify-content-center mt-5">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    <script src="js/main.js"></script>
    <script src="js/postPage.js"></script>
    <%- include('partials/footer') -%>
