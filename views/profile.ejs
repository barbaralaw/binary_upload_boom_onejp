    <div class="container">
      <h2>Create Post</h2>
      <form class="row gy-2 gx-3 align-items-center" id="post" action="/post/createPost" enctype="multipart/form-data" method='POST'>
        <div class="col-auto">
          <img id="uploadPreview"/>
        <div class='file file--upload'>
          <label for='imageUpload' class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
              <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
              <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
            </svg>
            Select an Image
          </label>
          <input type="file" class="form-control" id="imageUpload" name="file" accept="image/*" onchange="loadFile(event)" />
        </div>
      </div>
        <div class="col-9">
          <input class="form-control" type="text" placeholder="Enter Post Title" name='post'>

          <textarea class="form-control" placeholder="Enter your Post description (300 characters max.)" id="floatingTextarea" maxlength="300" name='postBody'></textarea>

          <input type="submit" class="btn btn-primary float-end" value="Add Post">
        </div>

      </form>





    <div class="container-fluid">
      <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
      <% } %>
      <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
      <% } %>
    </div>

    <h2>Your Posts</h2>

    <div class="container" id="feedContainer">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        <% post.reverse().forEach( el => { %>
          <div class="col-sm-12 mb-5">
            <div class="card mx-auto">
              <a href="/postPage/<%= el._id %>">
                <img class="card-img-top" src="<%= el.image %>" alt="<%= el.post %>">
              </a>
              <div class="card-body">
                <!-- Like Button -->
                <button class="btn btn-primary fa fa-heart" type="submit"></button>
                <!-- Comment Button -->
                <button class="btn btn-primary fa fa-comment" type="submit"></button>
                <!-- Share Button -->
                <button class="btn btn-primary fas fa-paper-plane" type="submit"></button>
                <!-- Save or Bookmark Button -->
                <button class="btn btn-primary fas fa-bookmark float-end" type="submit"></button>

                <h5 class="card-title">
                  <%= posts[i].post.length >= 30 ? posts[i].post.slice(0,27) + '...' : posts[i].post %>
                </h5>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>


    <div class="container justify-content-center">
      <div class="text-center">
        <a class="btn btn-primary" href="/post">Return to Profile</a>
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    </div>


